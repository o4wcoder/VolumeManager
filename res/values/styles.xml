<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButton</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/indigoPrimary500</item>
    </style>
    
    <style name="OverflowButton" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>
        
    <style name="DayButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#0FA1D3</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:minWidth">38dp</item>
        <item name="android:background">@color/buttonColor</item>
    </style>

    <style name="AlarmButton">
        <item name="android:background">@color/buttonColor</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="RadiusButton">
        <item name="android:background">@color/radiusButtonColor</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">38sp</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:minWidth">35dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

</resources>

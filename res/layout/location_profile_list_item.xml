<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activated"
    android:orientation="horizontal"
    android:padding="4dp" >
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/profileTitleTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:alpha="@string/primary_text_alpha_dark"
            android:padding="2dp"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:orientation="horizontal">           

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                 android:layout_weight="2"
                android:alpha="@string/secondary_text_alpha_dark"
                android:padding="2dp" />

            <TextView
                android:id="@+id/cityTextView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:layout_weight="2"
                android:alpha="@string/secondary_text_alpha_dark"
                android:padding="2dp" />

</LinearLayout>
        
    </LinearLayout>

    <ImageView
        android:id="@+id/volumeStartImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="0"
        android:padding="16dp"
        android:src="@drawable/ic_action_place_on_pink" />

</LinearLayout>

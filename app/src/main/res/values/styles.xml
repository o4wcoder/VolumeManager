<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="colorPrimaryDark">@color/app_primary_dark_color</item>
        <item name="colorAccent">@color/app_accent_color</item>
    </style>

    <style name="AppTheme.Main" parent="@style/AppTheme"></style>

    <style name="AppTheme.Details" parent="@style/AppTheme"></style>

    <style name="AppTheme.LocationMap" parent="@style/AppTheme"></style>

    <style name="AppTheme.Settings" parent="@style/AppTheme"></style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/indigoPrimary500</item>
        <item name="android:backgroundStacked">@color/indigoPrimary500</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs" parent="@android:style/Widget.Holo.ActionBar.TabView">

        <!-- tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@drawable/tab_text_color</item>
    </style>


    <style name="OverflowButton" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="DayButton">
        <item name="android:layout_width">@dimen/day_button_size</item>
        <item name="android:layout_height">@dimen/day_button_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/day_button_text_size</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:stateListAnimator">@anim/button_elevation</item>
    </style>

    <style name="AlarmButton">
        <item name="android:background">@color/buttonColor</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="RadiusButton">
        <item name="android:background">@color/buttonColor</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">38sp</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:minWidth">35dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="ProfileIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LocationMapFAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/location_fab_layout_margin</item>
        <item name="android:tint">@android:color/white</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">mini</item>
        <item name="elevation">@dimen/location_fab_elevation</item>
        <item name="pressedTranslationZ">@dimen/location_fab_translation_z</item>
    </style>

    <!-- Profile Title Styles -->
    <style name="ProfileTitleTextStyle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:alpha">@string/primary_text_alpha_dark</item>
        <item name="android:layout_width">@dimen/detail_title_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="ProfileTitleTextStyleDisabled" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:alpha">@string/hint_disabled_text_alpha_dark</item>
    </style>

    <!-- Profile Subtitle Styles -->
    <style name="ProfileSubheadingTextStyle" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:alpha">@string/secondary_text_alpha_dark</item>
    </style>


    <style name="ProfileSubheadingTextStyleDisabled" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:alpha">@string/hint_disabled_text_alpha_dark</item>
    </style>
</resources>
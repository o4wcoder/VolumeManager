<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppTheme.Main" parent="@style/AppTheme">
    </style>

    <style name="AppTheme.Details" parent="@style/AppTheme">
    </style>
    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.V14.VolumeManager.NoTitle</item>
    </style>

    <!-- Settings activity action bar styles -->
    <style name="ActionBar.V14.VolumeManager.NoTitle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/app_primary_color</item>
        <item name="android:height">56dp</item>
    </style>

</resources>
